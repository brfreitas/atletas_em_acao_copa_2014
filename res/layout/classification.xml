<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/classification_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <View
            android:id="@+id/classification_divider"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/classification_divider_not_classified" />

        <TextView
            android:id="@+id/classification_selection_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PG"
            android:background="@drawable/cellborder"
            android:gravity="center"
		    android:textSize="15sp" />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J"
            android:background="@drawable/cellborder"
            android:gravity="center"
		    android:textSize="15sp" />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V" 
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D" 
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E" 
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GP" 
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GC" 
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SG" 
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%" 
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
            android:id="@+id/classification_pg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" 
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp"/>
            <TextView
            android:id="@+id/classification_j"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:background="@drawable/cellborder" 
            android:gravity="center"
		        android:textSize="15sp"/>
            <TextView
            android:id="@+id/classification_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp" />
            <TextView
            android:id="@+id/classification_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp" />
            <TextView
            android:id="@+id/classification_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp" />
            <TextView
            android:id="@+id/classification_gp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp" />
            <TextView
            android:id="@+id/classification_gc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp" />
            <TextView
            android:id="@+id/classification_sg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp" />
            <TextView
            android:id="@+id/classification_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textView"
            android:background="@drawable/cellborder"
            android:gravity="center"
		        android:textSize="15sp" />
        </TableRow>

    </TableLayout>

</LinearLayout>